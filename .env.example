# Database
# Database - Supabase PostgreSQL
# Pooler connection for app runtime (port 6543)
DATABASE_URL="postgresql://postgres.<ref>:<password>@aws-1-eu-west-1.pooler.supabase.com:6543/postgres?pgbouncer=true&sslmode=require"

# Direct connection for migrations (Prisma uses this for db pull/push/migrate)
# Direct host connection (port 5432) - DO NOT use pooler for migrations
DIRECT_URL="postgresql://postgres.<ref>:<password>@db.<ref>.supabase.co:5432/postgres?sslmode=require"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION="7d"

# Server
PORT=3000
NODE_ENV="development"

# CORS
# Leave empty or unset to use default: http://localhost:3000, http://localhost:3001
CORS_ORIGIN="http://localhost:4200,http://localhost:3000,http://localhost:3001"
